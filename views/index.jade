extends category_layout

block content
  - for(var i = 0; i < products.length; i++){
    .products.col-sm-6.col-md-4.col-lg-3
      .thumbnail
        a(href='/product/#{products[i].id}')
          img.product_img(src='#{products[i].img}', alt='#{products[i].name}')
        .caption.text-center
          h4
            a.hidden_link(href='/product/#{products[i].id}') #{products[i].name}
          .product_description #{products[i].description}
        .product_buy.vertical_center
          span.product_price $#{products[i].price}
          button.add_cart_button.fa.fa-cart-arrow-down(data-id="#{products[i].id}")
  - }


